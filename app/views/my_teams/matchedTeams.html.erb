<%if !@matchedTeams.empty?%>
<div class="col-lg-6">
	<h2>Nearby Teams</h2>
	<div class="table-responsive">
		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<th>Team Name</th>
					<th>Sport</th>
					<th>No. of Players</th>
					<th>Location</th>
				</tr>
			</thead>
			<tbody>
			<%@matchedTeams.each do |f|%>
			<tr>
				<td><%=f[:team_name]%></td>
				<td><%=f[:sport_id]%></td>
				<td><%=f[:no_of_players]%></td>
				<td><%=f[:location]%></td>
				<td><a href=<%=my_teams_saveRequest_path(req_to:f[:id], req_from: @teamId)%>><button type="button" class="btn btn-primary btn-sm">Send Request</button></a></td>
			</tr>
			<%end%>
			</tbody>
		</table>
	</div>
</div>
<%else%>
	<h3>No Nearby Teams</h3>
<%end%>
